{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/dist/*": ["./dist/*"],
      "@/partials/*": ["./src/partials/*"]
    },
    "types": [
      "node",
      "eslint",
    ]
  },
  "include": [
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules",
  ]
}