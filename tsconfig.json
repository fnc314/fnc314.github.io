{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "checkJs": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-invalid-css": "off",
        }
      }
    ],
    "types": [
      "node",
      "eslint",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/dist/*": ["./dist/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    //"eslint.config.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}